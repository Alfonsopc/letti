@using System.ComponentModel.DataAnnotations
@using Letti.Web.Contracts

@inject NavigationManager navigationManager
@inject IUserService userService

<div class="row mb-4">
    <div class="col d-none d-sm-block"></div>
    <div class="col-12 col-sm-8 col-lg-6">        
        <div class="card">
            <div class="card-body">
                <h3>Login</h3>
                <EditForm Model="@model" OnValidSubmit="@LoginOnSubmit">
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    <div class="form-group">
                        <label class="font-weight-bold" for="username">Username</label>
                        <InputText id="username" class="form-control" placeholder="Username" @bind-Value="model.Username" />
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold" for="password">Password</label>
                        <InputText id="password" type="password" class="form-control" placeholder="Password" @bind-Value="model.Password" />
                    </div>
                    <button type="submit" class="btn btn-purple btn-block col-4 float-right font-weight-bold">Login</button>
                </EditForm>
            </div>
        </div>
    </div>
    <div class="col d-none d-sm-block"></div>
</div>

@code
{

    private LoginForm model = new LoginForm
    {
        Username = string.Empty,
        Password = string.Empty
    };

    private async Task LoginOnSubmit()
    {
        
        var logged = await userService.Login(model.Username, model.Password);
        if (logged)
        {
            navigationManager.NavigateTo("./");
        }
    }

    public class LoginForm
    {
        [Required]
        public string Username { get; set; }
        [Required]
        public string Password { get; set; }
    }
}
