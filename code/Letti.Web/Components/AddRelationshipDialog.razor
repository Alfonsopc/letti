@inherits AddRelationshipDialogBase

@if (ShowDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog" style="overflow-y: auto;">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="titleLabel">Agregar Relación</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <EditForm EditContext="@EditContext" OnValidSubmit="@HandleValidSubmit">

                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="form-group">
                            <label class="font-weight-bold" for="address">Apellido Paterno: </label>
                            <InputText id="address" class="form-control" @bind-Value="@Person.LastName" placeholder="Apellido Paterno"></InputText>
                        </div>
                        <div class="form-group">
                            <label class="font-weight-bold" for="city">Apellido Materno: </label>
                            <InputText id="city" class="form-control" @bind-Value="@Person.SecondLastName" placeholder="Apellido Materno"></InputText>
                        </div>
                        <div class="form-group">
                            <label class="font-weight-bold" for="name">Nombre: </label>
                            <InputText id="name" class="form-control" @bind-Value="@Person.FirstName" placeholder="Nombre"></InputText>
                            <ValidationMessage For="@(() => Person.FirstName)" />
                        </div>

                        <div class="form-group">
                            <label for="salesmen" class="font-weight-bold">Relación: </label>
                            <InputSelect id="salesmen" class="form-control" @bind-Value="@SelectedRelationshipId">
                                @foreach (var relationship in PersonalRelationships)
                                    {
                                    <option value="@relationship.Id.ToString()">@relationship.Name</option>
                                    }
                            </InputSelect>
                        </div>

                        <div class="row">
                            <table class="table table-striped mx-3">
                                <thead>
                                    <tr class="d-flex">
                                        <th class="col-4">Apellido Paterno</th>
                                        <th class="col-4">Apellido Materno</th>
                                        <th class="col-4">Nombre </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Letti.Model.PersonOfInterest person in Candidates)
                                    {
                                        <tr class="d-flex">
                                            <td class="col-4">@person.LastName</td>
                                            <td class="col-4">@person.SecondLastName</td>
                                            <td class="col-4">@person.FirstName</td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>

                        <hr />
                        <div class="row">
                            <div class="col-12 d-flex justify-content-end">
                                <button type="submit" class="btn btn-purple mr-3 font-weight-bold">Guardar Relación</button>
                                <a class="btn btn-secondary text-white font-weight-bold" @onclick="@Close">Cerrar</a>
                            </div>
                        </div>
                    </EditForm>

                </div>
                
            </div>
        </div>
    </div>
}

